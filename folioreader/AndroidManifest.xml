<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mjebooksdk">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk tools:overrideLibrary="org.readium.r2.streamer, org.readium.r2.shared" />

    <application
        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:replace="android:allowBackup">

        <meta-data
                android:name="com.google.android.gms.ads.AD_MANAGER_APP"
                android:value="true" />

        <provider
            android:name="com.mjebooksdk.AppContext"
            android:authorities="${applicationId}.provider.appcontext"
            android:exported="false" />

        <activity
            android:name="com.mjebooksdk.ui.activity.FolioActivity"
            android:label="@string/app_name"
            android:theme="@style/FolioActivityDayTheme" />

        <activity
            android:name="com.mjebooksdk.ui.activity.ContentHighlightActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.mjebooksdk.ui.activity.SearchActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

    </application>

</manifest>